<div class="col-md-offset-4 col-md-4">
	<div class="register-form">
		<div class="main-title">
			<h3 >Edit profile</h3>
		</div>

		<form method="POST" action="<%=base_url%>/user/edit/<%=profile.nickname%>">

			<% if(typeof success_msg != 'undefined') { %>
			<div class="top-messages bg-success"><%= success_msg %></div>
			<% } %>

			<% if(typeof error_msg != 'undefined') { %>
			<p class="top-messages bg-danger"><%= error_msg %></p>
			<% } %>

			<div class="form-group">
				<label for="nickname">Nickname</label>
				<input name="nickname" type="text" class="form-control" id="nickname" placeholder="Nickname" value="<%= profile.nickname %>" readonly="true">
			</div>
			<div class="form-group">
				<label for="name">Full name (for leaderboard) </label>
				<input name="fullname" type="text" class="form-control" id="name" placeholder="Full name" value="<%= profile.fullname %>">
			</div>
			<div class="form-group">
				<label for="email">Email (will remain hidden) <span class="text-danger">*</span></label>
				<input name="email" type="text" class="form-control" id="email" placeholder="Email" value="<%= profile.email %>">
			</div>
			<div class="form-group">
				<label for="password">New password</label>
				<input name="password" type="password" class="form-control" id="password" placeholder="Password">
			</div>
			<%if(user.level == level.ADMIN){%>
			<div class="form-group">
				<label for="level">Level</label>
				<select name="level" class="form-control">
					<%for(var property in level){%>
						<%if(level.hasOwnProperty(property)){%>
						<option value="<%=level[property]%>" <%if(profile.level == level[property]){%>selected="selected"<%}%>><%=property%></option>
						<%}%>
					<%}%>
				</select>
			</div>
			<%}%>
			<div class="text-danger form-group">* Required field</div>
			<button type="submit" class="btn btn-default">Save</button>
			<a href="<%=base_url%>/user/profile/<%=profile.nickname%>" class="btn btn-default">Cancel</a>
		</form>
	</div>
</div>
