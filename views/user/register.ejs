<div class="col-md-offset-4 col-md-4">
	<div class="register-form">
		<div class="main-title">
			<h3 >Register to compete!</h3>
		</div>

		<form method="POST" action="register">

			<% if(typeof success_msg != 'undefined') { %>
			<div class="top-messages bg-success"><%= success_msg %></div>
			<% } %>

			<% if(typeof error_msg != 'undefined') { %>
			<p class="top-messages bg-danger"><%= error_msg %></p>
			<% } %>

			<div class="form-group">
				<label for="nickname">Nickname <span class="text-danger">*</span></label>
				<input name="nickname" type="text" class="form-control" id="nickname" placeholder="Nickname" value="<%= user.nickname %>">
			</div>
			<div class="form-group">
				<label for="name">Full name (for leaderboard) </label>
				<input name="fullname" type="text" class="form-control" id="name" placeholder="Full name" value="<%= user.fullname %>">
			</div>
			<div class="form-group">
				<label for="email">Email (will remain hidden) <span class="text-danger">*</span></label>
				<input name="email" type="text" class="form-control" id="email" placeholder="Email" value="<%= user.email %>">
			</div>
			<div class="form-group">
				<label for="password">Password <span class="text-danger">*</span></label>
				<input name="password" type="password" class="form-control" id="password" placeholder="Password">
			</div>
			<div class="text-danger form-group">* Required field</div>
			<button type="submit" class="btn btn-default">Register</button>
			<a href=".." class="btn btn-default">Cancel</a>
		</form>
	</div>
</div>
