<div class="col-md-offset-3 col-md-6">
	<div class="create-prob">
		<br>
		<h3 >Create problem</h3>
		<br>
		<form method="POST" action="./">

			<% if(typeof success_msg != 'undefined') { %>
			<div class="top-messages bg-success"><%= success_msg %></div>
			<% } %>

			<% if(typeof error_msg != 'undefined') { %>
			<p class="top-messages bg-danger"><%= error_msg %></p>
			<% } %>

			<div class="form-group">
				<label for="title">Title <span class="text-danger">*</span></label>
				<input name="title" type="text" class="form-control" id="title" placeholder="Problem title">
			</div>
			<div class="form-group">
				<label for="roomtitle">Room <span class="text-danger">*</span></label>
				<input name="roomtitle" type="text" class="form-control" id="roomtitle" value="<%= room.title %>" readonly>
			</div>
			<div class="form-group hidden">
				<label for="room">Room <span class="text-danger">*</span></label>
				<input name="room" type="hidden" class="form-control" id="room" value="<%= room.room %>" readonly>
			</div>
			<div class="form-group">
				<label for="description">Description <span class="text-danger">*</span></label>
				<textarea name="description" class="form-control" id="description" style="height:8em;"placeholder="Define the problem"></textarea>
			</div>
			<div class="form-group">
				<label for="score">Score <span class="text-danger">*</span></label>
				<input name="score" class="form-control" id="score" placeholder="Score"/>
			</div>

			<div class="text-danger form-group">* Required field</div>
			<button type="submit" class="btn btn-default">Create problem</button>
			<a href="<%= base_url%>" class="btn btn-default">Cancel</a>
		</form>
	</div>
</div>
