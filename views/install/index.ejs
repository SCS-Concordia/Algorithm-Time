<div class="col-md-offset-4 col-md-4">
	<div class="install-form">
		<div class="main-title">
			<h3 >Install Algorithm time</h3>
		</div>

		<form method="POST" action="">

			<% if(typeof success_msg != 'undefined') { %>
			<div class="top-messages bg-success"><%= success_msg %></div>
			<% } %>

			<% if(typeof error_msg != 'undefined') { %>
			<p class="top-messages bg-danger"><%= error_msg %></p>
			<% } %>

			<div class="form-group">
				<h4>Promote a user to admin:</h4>
				<h5 class="text-danger">Once an admin is found, this page will never show again...</h5>
				<label for="nickname">Nickname <span class="text-danger">*</span></label>
				<input name="nickname" type="text" class="form-control" id="nickname" placeholder="Nickname">
			</div>
			<div class="text-danger form-group">* Required field</div>
			<button type="submit" class="btn btn-default">Make Admin</button>
			<a href="<%=base_url%>" class="btn btn-default">Cancel</a>
		</form>
	</div>
</div>
